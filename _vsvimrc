" Christian Rondeau's _vsvimrc
" Get it from https://github.com/christianrondeau/.vim

" Visual Studio {{{
set cursorline
set noexpandtab
" }}}

" VsVim {{{
set vsvim_cleanmacros
" }}}

" Custom Key Mappings {{{
 let mapleader = "\<Space>"
 let maplocalleader = "\\"
 " }}}
 
" Shortcuts {{{
nnoremap ; :
nnoremap , ;
nnoremap K i<CR><Esc> 
nnoremap <leader>n :noh<CR>
vnoremap gr p
" }}}

" Clipboard {{{
set clipboard=unnamed
" }}}

" UI Settings {{{
set scrolloff=4                    " Shows the next 4 lines after cursor when scrolling
map <MiddleMouse> <nop>
" }}}

" Search Settings {{{
set incsearch                      " Show search result as you type
set hlsearch                       " highlight all / search results
" }}}
